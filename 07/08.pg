TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
$showHint = 3;

Context("Numeric")->variables->are('x'=>'Real','y'=>'Real');

Context('Matrix');

$a=random(0,9,1);
$b=random(-9,9,1);

$u1=Formula("x+$b*y")->reduce();
$u2=Formula("$a")->reduce();
$u = Matrix([[$u1],[$u2]]);

$lambda = non_zero_random(0.1,0.9,0.1);

$ans = Matrix([
[-$lambda*($u1)],
[-$lambda*($u2)]
]);

